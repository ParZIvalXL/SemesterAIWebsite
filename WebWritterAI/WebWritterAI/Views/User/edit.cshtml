<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="author" content="Softnio">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="/docs/images/favicon.png">
    <title>Contact - CopyGen - AI Writer &amp; Copywriting Landing Page HTML Template.</title>
    <link rel="stylesheet" href="/copygen-html/html/assets/css/style.css?v1.2.0">
</head>

<body class="nk-body" data-menu-collapse="lg">
    <div class="nk-app-root ">
        <header class="nk-header">
            @await Html.PartialAsync("Header")
        </header><!-- .nk-header -->
        <main class="nk-pages">
            <section class="section section-bottom-0 has-shape has-mask">
                <div class="nk-shape bg-shape-blur-m mt-8 start-50 top-0 translate-middle-x"></div>
                <div class="nk-mask bg-pattern-dot bg-blend-around mt-n5 mb-10p mh-50vh"></div>
                <div class="container">
                    <div class="section-head">
                        <div class="row justify-content-center text-center">
                            <div class="col-lg-11 col-xl-10 col-xxl-9">
                                <h6 class="overline-title text-primary">Edit</h6>
                                <h1 class="title">Edit your profile</h1>
                            </div>
                        </div>
                    </div><!-- .section-head -->
                    <div class="section-content">
                        <div class="card border-0 shadow-sm rounded-4">
                            <div class="card-body">
                                <h3 class="title fw-medium mb-4">Change your values of profile there</h3>
                                <form data-action="user/edit" method="post" class="form-submit-init">
                                    <div class="row g-4">
                                        <!-- .col -->
                                        <label class="form-label" for="name">Full name</label>
                                        <div class="col-12">
                                            <div class="form-group">
                                                <div class="form-control-wrap">
                                                    <input name="name" id="name" type="text" class="form-control form-control-lg" placeholder="Your full name">
                                                </div>
                                            </div>
                                        </div>
                                        <!-- .col -->
                                        <label class="form-label" for="password">Password</label>
                                        <div class="col-12">
                                            <div class="form-group">
                                                <div class="form-control-wrap">
                                                    <input name="password" id="password" type="password" class="form-control form-control-lg" placeholder="Set new password">
                                                </div>
                                            </div>
                                        </div>
                                        <!-- .col -->
                                        <div class="col-12">
                                            <div class="form-group">
                                                <button class="btn btn-primary" type="submit" id="submit-btn">Change data</button>
                                            </div>
                                            <div class="form-result mt-4"></div>
                                        </div>
                                    </div>
                                    <!-- .row -->
                                </form>
                            </div>
                        </div>
                    </div><!-- .section-content -->
                </div><!-- .container -->
            </section><!-- .section -->
        </main>
        <footer class="nk-footer">
            @await Html.PartialAsync("Footer");
        </footer>
    </div>
    @await Html.PartialAsync("Scripts");
    <script defer type="module" src="/copygen-html/src/js/unloggedRedirect.js"></script>
</body>

</html>